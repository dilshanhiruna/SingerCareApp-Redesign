<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Dilshan.HistoryFragment"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ongoing_history_recyclerView_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/nothingFound_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nothingfound"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/ongoing_history_recyclerView_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>